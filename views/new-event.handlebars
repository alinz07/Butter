<section class="container-fluid new-post-container">
	<div class="row justify-content-around">

	  <h2>Event Info</h2>

      <section class="container-fluid row align-items-center">
        <div class="col">
          {{!-- <h3 id="dash-review-title">Your Reviews</h3> --}}
          {{#if events.length}}
          <ol class="post-list">
            {{#each events as |event|}}
            <li>
              {{> event-info event}}
            </li>
            {{/each}}
          </ol>
          {{else}}
          <ol id="no-reviews">
            <li>
              No events booked yet.
            </li>
          </ol>
          {{/if}}
        </div>
      </section>

	  <form class="new-post-form col-sm-6 container">
			<div>
				<label for="user_id">User_Id:</label>
				<input
					type="text"
					id="user_id"
					name="user_id"
					value="{{user_id}}"
					readonly
				/>
			</div>

			<div>
				<label for="date">Date:</label>
				<input type="text" id="date" name="date" />
			</div>

			<div>
				<label for="address">Address:</label>
				<input type="text" id="address" name="address" />
			</div>

			<div>
				<label for="time">Time:</label>
				<input type="text" id="time" name="time" />
			</div>
			<div>
				<label for="price">Price:</label>
				<input type="text" id="price" name="price" />
			</div>
			<div>
				<label for="guests">Guests:</label>
				<input type="text" id="guests" name="guests" />
			</div>

			<button type="submit" class="btn create-post">Request Booking</button>

	  </form>

	</div>
</section>

<script src="/javascript/add-event.js"></script>