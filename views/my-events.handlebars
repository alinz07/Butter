<h2 class="col-sm-3" id="page-title">My Events Dashboard</h2>

{{#if isEli}}
<section>
  <div>
    <a href="https://calendly.com/generaliroh91127/catering" target="_blank" class="login-link">Manage my events calendar on calendly in a new tab</a>
  </div>
</section>
{{/if}}

<!-- View all user's events -->
<section class="container-fluid row align-items-center">
  <div class="col">
    {{!-- <h3 id="dash-review-title">Your Reviews</h3> --}}
    {{#if Events.length}}
    <ol class="post-list">
      {{#each Events as |event|}}
      <li>
        {{> event-info event}}
      </li>
      <button class="login-link">Cancel Event</button>
      {{/each}}
    </ol>
    {{else}}
    <ol id="no-reviews">
      <li>
        No events to display yet. Book an event today by select Book an Event above!
      </li>
    </ol>
    {{/if}}
  </div>
</section>

<!-- keep this js file to build functionality to cancel an event' -->
<script src="/javascript/delete-a-book.js"></script>